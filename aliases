alias grep="grep --color"
alias egrep="egrep --color"

alias ..="cd .."

alias tailf="tail -f"
alias l="ls"
alias la="ls -a"
alias ll="ls -lah"

# secure your moviments and commands
alias mv='mv -i'
alias cp='cp -i'
alias rm='rm -i'

#rails aliases
alias ss='script/server'
alias sc='script/console'
alias r="rails"

# vim aliases
alias mvim="/Applications/mvim"
alias vim="/Applications/mvim"
